<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Husky Math Adventure!</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Nunito', sans-serif; background-color: #E0F7FA; }
        h1, h2, h3, button { font-family: 'Fredoka One', cursive; }
        
        .item-pop { animation: pop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        @keyframes pop { from { transform: scale(0); opacity: 0; } to { transform: scale(1); opacity: 1; } }
        
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        
        .five-grid {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 0.5rem;
            justify-items: center;
        }

        /* Custom Sticker Classes */
        .sticker { filter: drop-shadow(2px 4px 6px rgba(0,0,0,0.1)); transition: transform 0.2s; }
        .sticker:hover { transform: scale(1.1) rotate(5deg); }
    </style>
</head>
<body>

<div id="root"></div>

<script type="text/babel">

    // --- Custom Assets (Refactored to Functions for Size Control) ---
    const ASSETS = {
        husky: (size = "w-10 h-10") => (
            <svg viewBox="0 0 100 100" className={`${size} sticker`}>
                <circle cx="50" cy="50" r="45" fill="#90CAF9" stroke="#1565C0" strokeWidth="3"/>
                <path d="M30 35 L20 15 L45 25 Z" fill="#1565C0"/>
                <path d="M70 35 L80 15 L55 25 Z" fill="#1565C0"/>
                <circle cx="35" cy="45" r="5" fill="white"/>
                <circle cx="65" cy="45" r="5" fill="white"/>
                <circle cx="35" cy="45" r="2" fill="black"/>
                <circle cx="65" cy="45" r="2" fill="black"/>
                <path d="M45 60 Q50 65 55 60" fill="none" stroke="black" strokeWidth="2"/>
                <rect x="25" y="40" width="50" height="10" rx="5" fill="#FFB74D" opacity="0.8"/>
            </svg>
        ),
        apple: (size = "w-10 h-10") => (
            <svg viewBox="0 0 100 100" className={`${size} sticker`}>
                <path d="M50 20 Q35 10 20 30 Q10 50 30 80 Q50 95 70 80 Q90 50 80 30 Q65 10 50 20 Z" fill="#FF5252" stroke="#B71C1C" strokeWidth="2"/>
                <path d="M50 20 Q55 5 65 10" fill="none" stroke="#5D4037" strokeWidth="3"/>
                <path d="M50 20 Q40 10 40 25 Q55 25 50 20" fill="#66BB6A" stroke="#2E7D32" strokeWidth="1"/>
                <circle cx="35" cy="40" r="3" fill="white" opacity="0.5"/>
            </svg>
        ),
        orange: (size = "w-10 h-10") => (
            <svg viewBox="0 0 100 100" className={`${size} sticker`}>
                <circle cx="50" cy="55" r="40" fill="#FF9800" stroke="#E65100" strokeWidth="2"/>
                <circle cx="50" cy="55" r="40" fill="url(#orangeGradient)" opacity="0.3"/>
                <path d="M50 15 Q55 5 60 10" fill="none" stroke="#5D4037" strokeWidth="3"/>
                <path d="M50 15 Q40 5 35 15 Q55 20 50 15" fill="#66BB6A" stroke="#2E7D32" strokeWidth="1"/>
                <circle cx="30" cy="40" r="2" fill="#F57C00"/>
                <circle cx="70" cy="60" r="2" fill="#F57C00"/>
                <circle cx="45" cy="75" r="2" fill="#F57C00"/>
            </svg>
        ),
        banana: (size = "w-10 h-10") => (
            <svg viewBox="0 0 100 100" className={`${size} sticker`}>
                <path d="M20 20 Q40 10 60 20 Q90 40 80 80 Q60 90 30 70 Q10 50 20 20 Z" fill="#FFEB3B" stroke="#FBC02D" strokeWidth="2"/>
                <path d="M20 20 L15 15" fill="none" stroke="#5D4037" strokeWidth="4"/>
                <path d="M80 80 L85 85" fill="none" stroke="#5D4037" strokeWidth="2"/>
                <path d="M30 30 Q50 25 70 40" fill="none" stroke="#F9A825" strokeWidth="2" opacity="0.6"/>
            </svg>
        )
    };

    const NumberLine = ({ onSelect }) => {
        const numbers = Array.from({ length: 21 }, (_, i) => i);
        return (
            <div className="w-full bg-white rounded-2xl shadow-xl border-4 border-cyan-200 p-4 mt-6 overflow-x-auto no-scrollbar">
                <h3 className="text-center text-cyan-600 text-lg mb-2">üëá Tap a number to answer! üëá</h3>
                <div className="flex gap-3 min-w-max px-2 pb-2 justify-center md:justify-start">
                    {numbers.map((num) => (
                        <button
                            key={num}
                            onClick={() => onSelect(num)}
                            className="w-12 h-12 md:w-14 md:h-14 rounded-full flex items-center justify-center text-xl text-cyan-700 font-bold border-4 border-cyan-100 bg-white hover:bg-cyan-50 hover:border-cyan-300 active:bg-cyan-500 active:text-white transition-all shadow-sm"
                        >
                            {num}
                        </button>
                    ))}
                </div>
            </div>
        );
    };

    // --- Instruction Screen Component ---
    const InstructionScreen = ({ onStart }) => (
        <div className="min-h-screen flex flex-col items-center justify-center p-4 text-center max-w-4xl mx-auto">
            <div className="bg-white p-8 rounded-3xl shadow-2xl border-b-8 border-cyan-300 w-full animate-pop">
                <h1 className="text-4xl text-cyan-600 mb-2">How to Add? ‚ûï</h1>
                <p className="text-gray-500 mb-8 text-lg">Count the fruits to find the answer!</p>
                
                <div className="bg-orange-50 p-8 rounded-3xl border-4 border-orange-100 mb-8">
                    
                    <h3 className="text-3xl text-orange-700 mb-8 font-bold">Example: 2 + 3 = ?</h3>

                    <div className="flex flex-col md:flex-row items-center justify-center gap-6">
                        
                        {/* Group 1 */}
                        <div className="bg-white p-6 rounded-2xl border-2 border-orange-200 shadow-sm flex flex-col items-center w-full md:w-1/3">
                            <div className="flex gap-2">
                                {/* Magnified Apples */}
                                {ASSETS.apple("w-16 h-16")}
                                {ASSETS.apple("w-16 h-16")}
                            </div>
                            <span className="text-4xl font-bold text-orange-500 mt-4">2</span>
                        </div>

                        <div className="text-5xl font-black text-orange-300">+</div>

                        {/* Group 2 */}
                        <div className="bg-white p-6 rounded-2xl border-2 border-orange-200 shadow-sm flex flex-col items-center w-full md:w-1/3">
                            <div className="flex gap-2">
                                {/* Magnified Apples */}
                                {ASSETS.apple("w-16 h-16")}
                                {ASSETS.apple("w-16 h-16")}
                                {ASSETS.apple("w-16 h-16")}
                            </div>
                            <span className="text-4xl font-bold text-orange-500 mt-4">3</span>
                        </div>

                        <div className="text-5xl font-black text-orange-300">=</div>

                        {/* Result */}
                        <div className="bg-yellow-100 p-6 rounded-2xl border-4 border-yellow-300 shadow-md flex flex-col items-center w-full md:w-1/3 transform scale-105">
                            <div className="flex gap-1 flex-wrap justify-center">
                                {/* Magnified Apples (slightly smaller to fit) */}
                                {ASSETS.apple("w-14 h-14")}
                                {ASSETS.apple("w-14 h-14")}
                                {ASSETS.apple("w-14 h-14")}
                                {ASSETS.apple("w-14 h-14")}
                                {ASSETS.apple("w-14 h-14")}
                            </div>
                            <span className="text-5xl font-bold text-yellow-600 mt-4">5</span>
                        </div>

                    </div>
                </div>

                <button 
                    onClick={onStart}
                    className="w-full md:w-auto px-12 bg-green-500 hover:bg-green-600 text-white text-2xl py-4 rounded-2xl shadow-lg border-b-4 border-green-700 active:border-b-0 active:translate-y-1 transition-all"
                >
                    I'm Ready! Let's Go! üöÄ
                </button>
            </div>
        </div>
    );

    // --- Main Game Component ---
    const MathGame = ({ onBack }) => {
        const [num1, setNum1] = React.useState(2);
        const [num2, setNum2] = React.useState(3);
        const [activeField, setActiveField] = React.useState('num1'); 
        const [theme, setTheme] = React.useState('apple');

        const handleNumberLineSelect = (num) => {
            if (activeField === 'num1') {
                setNum1(num);
                setActiveField('num2'); 
            } else if (activeField === 'num2') {
                setNum2(num);
            }
        };

        const handleNewQuestion = () => {
            setNum1(0);
            setNum2(0);
            setActiveField('num1');
        };

        const VisualGroup = ({ count, colorClass, label }) => (
            <div className={`bg-white p-3 rounded-2xl shadow-md border-b-4 ${colorClass} w-full min-h-[140px] flex flex-col items-center justify-start transition-colors`}>
                <span className="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">{label}</span>
                {count > 0 ? (
                    <div className="five-grid w-full">
                        {Array.from({ length: count }).map((_, i) => (
                            <div key={i} className="item-pop">
                                {ASSETS[theme]()}
                            </div>
                        ))}
                    </div>
                ) : (
                    <span className="text-gray-300 text-sm self-center mt-8">Empty</span>
                )}
            </div>
        );

        return (
            <div className="min-h-screen flex flex-col items-center py-4 px-2 md:px-4 max-w-5xl mx-auto animate-pop">
                
                <header className="w-full flex justify-between items-center mb-4 px-2">
                    <button onClick={onBack} className="text-cyan-600 font-bold hover:bg-white hover:shadow px-3 py-1 rounded-lg transition-all">‚Üê Instruction</button>
                    <h1 className="text-3xl text-cyan-700 drop-shadow-sm">Counting Tool üçé</h1>
                    <div className="w-24"></div> 
                </header>

                <div className="bg-white p-4 md:p-6 rounded-3xl shadow-xl border-b-8 border-cyan-200 w-full flex flex-col gap-6 relative">
                    
                    <button 
                        onClick={handleNewQuestion}
                        className="absolute -top-5 right-6 bg-red-400 hover:bg-red-500 text-white font-bold py-2 px-6 rounded-full shadow-lg border-b-4 border-red-600 active:border-b-0 active:translate-y-1 transition-all flex items-center gap-2 z-20"
                    >
                        üîÑ Clear
                    </button>

                    {/* Equation Row */}
                    <div className="flex flex-row items-start justify-center gap-1 md:gap-4 w-full mt-4">
                        
                        {/* Group 1 */}
                        <div className="flex flex-col items-center gap-2 w-1/4">
                            <div 
                                onClick={() => setActiveField('num1')}
                                className={`cursor-pointer w-full flex justify-center p-2 rounded-2xl transition-all border-4 ${activeField === 'num1' ? 'bg-blue-50 border-blue-400 scale-105 shadow-md' : 'border-transparent hover:bg-gray-50'}`}
                            >
                                <div className="w-14 h-14 md:w-20 md:h-20 flex items-center justify-center text-3xl md:text-5xl font-bold text-blue-600 bg-white border-2 border-blue-100 rounded-2xl shadow-sm">
                                    {num1}
                                </div>
                            </div>
                            <VisualGroup count={num1} colorClass="border-blue-100 bg-blue-50" label="First Group" />
                        </div>

                        {/* Plus */}
                        <div className="h-20 flex items-center pt-2">
                            <div className="text-3xl md:text-5xl font-black text-gray-300">+</div>
                        </div>

                        {/* Group 2 */}
                        <div className="flex flex-col items-center gap-2 w-1/4">
                            <div 
                                onClick={() => setActiveField('num2')}
                                className={`cursor-pointer w-full flex justify-center p-2 rounded-2xl transition-all border-4 ${activeField === 'num2' ? 'bg-green-50 border-green-400 scale-105 shadow-md' : 'border-transparent hover:bg-gray-50'}`}
                            >
                                <div className="w-14 h-14 md:w-20 md:h-20 flex items-center justify-center text-3xl md:text-5xl font-bold text-green-600 bg-white border-2 border-green-100 rounded-2xl shadow-sm">
                                    {num2}
                                </div>
                            </div>
                            <VisualGroup count={num2} colorClass="border-green-100 bg-green-50" label="Second Group" />
                        </div>

                        {/* Equals */}
                        <div className="h-20 flex items-center pt-2">
                            <div className="text-3xl md:text-5xl font-black text-gray-300">=</div>
                        </div>

                        {/* Result Group */}
                        <div className="flex flex-col items-center gap-2 w-1/3">
                            <div className="w-full flex justify-center p-2">
                                <div className="w-14 h-14 md:w-20 md:h-20 flex items-center justify-center text-3xl md:text-5xl font-bold text-white bg-yellow-400 border-4 border-yellow-300 rounded-full shadow-lg">
                                    {num1 + num2}
                                </div>
                            </div>
                            <div className="w-full bg-yellow-50 rounded-2xl p-3 border-b-4 border-yellow-200 shadow-inner flex flex-col items-center min-h-[140px]">
                                <span className="text-xs font-bold text-yellow-600 uppercase tracking-widest mb-2">Total Amount</span>
                                <div className="five-grid w-full">
                                    {Array.from({ length: num1 }).map((_, i) => (
                                        <div key={`a-${i}`} className="item-pop">{ASSETS[theme]()}</div>
                                    ))}
                                    {Array.from({ length: num2 }).map((_, i) => (
                                        <div key={`b-${i}`} className="item-pop" style={{animationDelay: `${(num1 * 0.05) + (i * 0.05)}s`}}>
                                            <div className="opacity-60 scale-90 grayscale-[30%]">{ASSETS[theme]()}</div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>

                    </div>

                    <NumberLine onSelect={handleNumberLineSelect} />

                </div>

                {/* Theme Selector */}
                <div className="fixed bottom-4 right-4 bg-white p-2 rounded-full shadow-xl border-2 border-gray-100 flex gap-2 z-10">
                    {Object.keys(ASSETS).filter(k => k !== 'husky' && k !== 'paw' && k !== 'bone').map(key => (
                        <button 
                            key={key}
                            onClick={() => setTheme(key)}
                            className={`p-2 rounded-full w-12 h-12 flex items-center justify-center transition-all ${theme === key ? 'bg-cyan-100 scale-110 ring-2 ring-cyan-300' : 'hover:bg-gray-50'}`}
                        >
                            <div className="w-8 h-8">{ASSETS[key]()}</div>
                        </button>
                    ))}
                    {/* Add back husky just in case */}
                     <button 
                            key="husky"
                            onClick={() => setTheme('husky')}
                            className={`p-2 rounded-full w-12 h-12 flex items-center justify-center transition-all ${theme === 'husky' ? 'bg-cyan-100 scale-110 ring-2 ring-cyan-300' : 'hover:bg-gray-50'}`}
                        >
                            <div className="w-8 h-8">{ASSETS.husky()}</div>
                        </button>
                </div>

            </div>
        );
    };

    const App = () => {
        const [screen, setScreen] = React.useState('instructions'); // 'instructions' or 'game'

        return (
            <>
                {screen === 'instructions' && <InstructionScreen onStart={() => setScreen('game')} />}
                {screen === 'game' && <MathGame onBack={() => setScreen('instructions')} />}
            </>
        );
    };

    const root = ReactDOM.createRoot(document.getElementById('root'));
    root.render(<App />);

</script>
</body>
</html>
